<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/li_message_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:animateLayoutChanges="true"
        style="@style/Widget.MaterialComponents.CardView"

        android:transitionName="cv">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            >

            <TextView
                android:id="@+id/li_message_tvuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:text="username"
                android:transitionName="2"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"
                />

            <TextView
                android:id="@+id/li_message_tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:text="18:19"
                style="@style/TextAppearance.MaterialComponents.Subtitle2" />

            <View
                android:id="@+id/li_message_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/li_message_tvuser"
                android:padding="2dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/li_message_tvmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/li_message_divider"
                android:transitionName="top"
                android:text="GroÃŸes Besauffest"
                style="@style/TextAppearance.MaterialComponents.Headline4" />


            <TextView
                android:id="@+id/li_event_tvdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/li_message_tvmessage"
                android:text="11.11.11 18:30 Uhr"
                style="@style/TextAppearance.MaterialComponents.Headline5" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>